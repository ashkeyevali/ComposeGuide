<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#071222"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="@string/all_empty_form" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/valueInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:hint="Названия">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/valueEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="11dp"
            android:backgroundTint="@null"
            android:lineSpacingExtra="2sp"
            android:textSize="20sp"
            tools:text="444" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnPrimary"
        style="@style/Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_secondary_btn"
        android:gravity="center"
        tools:text="@string/all_next" />

    <Button
        android:id="@+id/btnSecondary"
        style="@style/Button.Tertiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/all_next"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
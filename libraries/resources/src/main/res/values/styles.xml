<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_primary_btn</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Secondary" parent="Button.Primary">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="backgroundTint">@color/secondaryColor</item>
    </style>

    <style name="Button.Tertiary" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>